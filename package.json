{
  "name": "sofash",
  "packageManager": "yarn@3.6.1",
  "private": true,
  "scripts": {
    "server": "yarn workspace server",
    "cli": "yarn workspace cli",
    "env": "yarn workspace env",
    "lint": "yarn workspaces foreach --exclude . run lint",
    "lint:fix": "yarn workspaces foreach --exclude . run lint:fix",
    "build": "yarn workspaces foreach --exclude . run build",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "devDependencies": {
    "husky": "^8.0.0",
    "pinst": "^3.0.0"
  }
}
